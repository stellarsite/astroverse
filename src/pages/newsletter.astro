---
import BaseLayout from "@layouts/BaseLayout.astro";
import MailerLiteForm from "@components/MailerLiteForm.astro";
import { SITE_TITLE } from "@consts";
import styles from '@styles/home.module.scss';  // You may need to create this file

const SUBSCRIBE_TITLE = "Subscribe to Our Newsletter";
const SUBSCRIBE_DESCRIPTION = "Stay updated with the latest real estate digital marketing trends and tips.";
---

<BaseLayout title={`${SITE_TITLE} - Subscribe`} description={SUBSCRIBE_DESCRIPTION}>
  <div class="max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class={styles.subscribeContainer}>
      <h1 class="text-3xl font-bold mb-4">{SUBSCRIBE_TITLE}</h1>
      <p class="mb-6">{SUBSCRIBE_DESCRIPTION}</p>
      
      <div class={styles.formWrapper}>
        <MailerLiteForm />
      </div>
      
      <div class={styles.benefits}>
        <h2 class="text-xl font-semibold mb-3">Why Subscribe?</h2>
        <ul class="list-disc pl-5">
          <li>Get the latest digital marketing strategies for realtors</li>
          <li>Receive tips on enhancing your online presence</li>
          <li>Learn about new tech tools to streamline your business</li>
          <li>Access exclusive content and offers</li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>