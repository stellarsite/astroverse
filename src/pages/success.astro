---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";

const pageTitle = "Success";
const pageDescription = "Success";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <main id="content">
        <div class="text-center py-10 px-4 sm:px-6 lg:px-8">
          <h1 class="block text-7xl font-bold font-archivo-black uppercase text-black sm:text-9xl dark:text-white">Success</h1>
          <p class="mt-3 text-gray-600 dark:text-neutral-400">Thank you for your purchase!</p>
          <p class="text-gray-600 dark:text-neutral-400">Your ebook will arrive in your inbox very shortly.</p>
          <div class="mt-5 flex flex-col justify-center items-center gap-2 sm:flex-row sm:gap-3">
            <a class="w-full sm:w-auto py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-neutral-400 text-white hover:bg-neutral-600 disabled:opacity-50 disabled:pointer-events-none" href="/">
              <Icon name="tabler:chevron-left" class="icon-base" />
              Back to homepage
            </a>
          </div>
        </div>
      </main>
</BaseLayout>
